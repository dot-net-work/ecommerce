@using Ecommerce.Models.RazorViewModels.Customer
@model Ecommerce.Models.RazorViewModels.Customer.CustomerCreateViewModel

@{
    Layout = "_Layout";
}


<h1>Customer Create</h1>
<form method="post">
    <div class="container">
        <div class="form-horizontal">
            <div class="form-group">
                <label for="Name" class="col-md-2">Name</label>
                <div class="col-md-10">
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label for="Address" class="col-md-2">Address</label>
                <div class="col-md-10">
                    <input type="text" asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label for="LoyaltyPoint" class="col-md-2">LoyaltyPoint</label>
                <div class="col-md-10">
                    <input type="text" asp-for="LoyaltyPoint" class="form-control" />
                    <span asp-validation-for="LoyaltyPoint" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 text-center">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>

<h1>Customer List</h1>
<partial name="~/Views/Shared/Customer/_CustomerList.cshtml" model="Model.CustomerList"/>


@section Scripts
 {
     <script src="~/node_modules/jquery-validation/dist/jquery.validate.js"></script>
     <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>

 }
